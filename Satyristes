;; For Satyrographos 0.0.2 series
(version 0.0.2)

;; Library declaration
(library
  ;; Library name
  (name "figbox")
  ;; Library version
  (version "0.1.1")
  ;; Files
  (sources
    ((packageDir "src")))
  ;; OPAM package file
  (opam "satysfi-figbox.opam")
  ;; Dependency
  (dependencies
    ((dist ()) ; Standard library
     (base ()) ; Base library
    )))

;; Library doc declaration
(libraryDoc
  ;; Library doc name
  (name "figbox-doc")
  ;; Library version
  (version "0.1.1")
  ;; Working directory to build docs
  (workingDirectory "doc")
  ;; Build commands
  (build
    ;; Run SATySFi
    ((satysfi "manual.saty" "-o" "manual.pdf")))
  ;; Files
  (sources
    ((doc "manual.pdf" "doc/manual.pdf")))
  ;; OPAM package file
  (opam "satysfi-figbox-doc.opam")
  ;; Dependency
  (dependencies
    ((figbox ()) ; the main library
     (dist ()) ; Standard library
     (base ()) ; Base library
     (easytable ())
     (enumitem ())
    )))
